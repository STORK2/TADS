<% include header %>
<div class="row" align="center">
	<div class="small-12 large-centered columns">
		<h3>Please wait...<h3>
	</div>
</div>
<div class="row" align="center">
	<div class="small-12 large-centered columns">
		<form name="userForm" method="post" action="<%= destination %>" >
			<input type="hidden" name="country" type="text" value="<%= country %>" />
			<input type="hidden" name="SAMLRequest" type="text" value="<%= SAMLRequest %>" />
			<input type="submit" style="display: none;"/>
			<img src="/images/loading.gif" onload="submit()"/>
		</form>
	</div>
</div>
<script type="text/javascript">
	function submit(){
		document.userForm.submit();
	}
</script>
<% include footer %>
